@model Pizza.Models.PizzaModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Vous êtes sûr de vouloir supprimer la pizza @Html.DisplayFor(model => model.Nom) ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd>
            @if (Model.Ingredients != null)
            {
                foreach (var ingredient in Model.Ingredients)
                {
                    @Html.DisplayFor(i => ingredient.Nom) <br/>
                }
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pate)
        </dt>
        <dd>
            @if (Model.Pate != null)
            {
                @Html.DisplayFor(model => model.Pate.Nom)
            }

        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Retour à la liste des pizzas", "Index")
        </div>
    }
</div>
